# Maintainer: Sakari <sk308269317@outlook.com>

_pkgname=hyprland-autoname-workspaces
pkgname="${_pkgname}-git"
pkgver=1
pkgrel=1
pkgdesc='Hyprland autoname workspaces'
arch=('x86_64')
url="https://github.com/cyrinux/${_pkgname}"
license=('ISC')
depends=('otf-font-awesome' 'hyprland' 'systemd-libs')
makedepends=('cargo' 'git' 'clang')
conflicts=("hyprland-autoname-workspaces" "hyprland-autoname-workspaces-bin")
provides=("hyprland-autoname-workspaces")
source=("git+https://github.com/cyrinux/${_pkgname}.git")
sha256sums=('SKIP')

pkgver() {
    cd "${_pkgname}"
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
    cd "${_pkgname}"
    make build
}

package() {
    cd "${srcdir}/${_pkgname}"
    install -d "${pkgdir}/usr/bin"
    install -d "${pkgdir}/usr/share/licenses/${_pkgname}"
    install -Dm755 "target/release/${_pkgname}" "${pkgdir}/usr/bin/${_pkgname}"
    install -Dm644 "LICENSE.md" "${pkgdir}/usr/share/licenses/${_pkgname}"
}
